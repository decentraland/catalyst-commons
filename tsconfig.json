{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2018",
    "lib": [
      "es2018",
      "dom"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "types": [
      "node"
    ],
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "dist",
    "src/contracts",
    "src/setupTests.ts"
  ],
  "include": [
    "./src"
  ]
}
